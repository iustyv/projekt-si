{% extends 'base.html.twig' %}

{% block title %}
     {{ report.title|default('message.report_not_found'|trans) }}
{% endblock %}

{% block body %}
    <h1>{{ report.title|default('message.report_not_found'|trans) }}</h1>
    {% if report is defined and report|length %}
    <dl class="dl-horizontal">
        <dt>{{ 'label.id'|trans }}</dt>
        <dd>{{ report.id }}</dd>
        <dt>{{ 'label.title'|trans }}</dt>
        <dd>{{ report.title }}</dd>
        <dt>{{ 'label.description'|trans }}</dt>
        <dd>{{ report.description }}</dd>
        <dt>{{ 'label.category'|trans }}</dt>
        <dd>{{  report.category.title }}</dd>
        <dt>{{ 'label.created_at'|trans }}</dt>
        <dd>{{ report.createdAt|format_date('long') }}</dd>
        <dt>{{ 'label.updated_at'|trans }}</dt>
        <dd>{{ report.updatedAt|format_date('long') }}</dd>
    </dl>
    {% if comments is defined and comments.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.content'|trans }}</th>
                <th>{{ 'label.created_at'|trans }}</th>
                <th>{{ 'label.updated_at'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments.items %}
                <tr>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.createdAt|format_date('long') }}</td>
                    <td>{{ comment.updatedAt|format_date('long') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(comments) }}
        </div>
    {% else %}
        {{ 'message.empty_list'|trans }}
    {% endif %}
    <p>
        <a href="{{ url('report_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    </p>
    {% else %}
    <p>{{ 'message.report_not_found'|trans }}</p>
    {% endif %}
{% endblock %}