{% extends 'base.html.twig' %}

{% block title  %}
    {{ 'label.reports'|trans }}
{% endblock %}

{% block body %}
    <h1 class="mt-3 mb-4">{{ 'label.reports'|trans }}</h1>

    <div>
        {% if form is defined and form is not null %}
            {% include 'default/_trial_form.html.twig' with {
                form: form,
                submit_label: 'action.search'|trans,
            } %}
        {% endif %}
    </div>

    {% set categoryId = filters.categoryId %}
    {% set statusId = filters.statusId %}
    {% set tagId = filters.tagId %}
    {% set search = filters.search %}

    <div class="d-flex justify-content-between mt-4">
        <div class="btn-group">
            <button type="button" class="btn btn-outline-primary knp-th">{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'report.title') }}</button>
            <button type="button" class="btn btn-outline-primary knp-th">{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.title') }}</button>
            <button type="button" class="btn btn-outline-primary knp-th">{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'report.createdAt') }}</button>
            <button type="button" class="btn btn-outline-primary knp-th">{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'report.updatedAt') }}</button>
            <a href="{{ url('report_index') }}" class="btn btn-outline-secondary float-right">{{ 'action.clear_filters'|trans }}</a>
        </div>

    </div>

    {% if pagination is defined and pagination.items|length %}
        {% for report in pagination.items %}
            <div class="d-flex justify-content-between border rounded py-3 px-4 mb-2">
                <div class="pb-1">
                    <div class="fw-bold">{{ report.author.nickname }}</div>
                    <div><a href="{{ url('report_show', {id: report.id}) }}" title="{{ 'action.view'|trans }}" class="text-decoration-none fs-5">{{ report.title }}</a></div>
                    <div>
                        <div>
                            <span class="fw-bold">{{ 'label.category'|trans }}</span>
                            <a class="text-primary text-decoration-none" href="{{ url('report_index', {'categoryId' : report.category.id, 'statusId': statusId, 'tagId': tagId, 'search': search}) }}" title="{{ report.category.title }}">{{ report.category.title }}</a>
                        </div>
                        <div>
                            <span class="fw-bold pr-4">{{ 'label.tags'|trans }}</span>
                            <span>
                                {% for tag in report.tags %}
                                <a href="{{ url('report_index', {'tagId' : tag.id, 'categoryId': categoryId, 'statusId': statusId, 'search': search}) }}" title="{{ tag.title }}" class="text-primary text-decoration-none">{{ tag.title }}</a>{% if not loop.last %}, {% endif %}
                                {% endfor %}</span>
                        </div>
                    </div>
                </div>
                <div>
                    <div>{{ 'label.created_at'|trans }} {{ report.createdAt|format_date('long') }}</div>
                    <div>{{ 'label.updated_at'|trans }} {{ report.updatedAt|format_date('long') }}</div>
                    <div class="mt-3">
                        <span class="fw-bold">{{ 'label.status'|trans }}</span>
                        <a class="text-primary text-decoration-none" href="{{ url('report_index', {'statusId' : report.status.value, 'categoryId': categoryId, 'tagId': tagId, 'search': search}) }}" title="{{ report.status.label|trans }}">{{ report.status.label|trans }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if is_granted('CREATE_REPORT') %}
            <a href="{{ url('report_create') }}" class="btn btn-primary my-2">{{ 'action.create'|trans }}</a>
        {% endif %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
    <p>
        {{ 'message.empty_list'|trans }}
    </p>
{% endif %}
{% endblock %}
