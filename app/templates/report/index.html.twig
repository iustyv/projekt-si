{% extends 'base.html.twig' %}

{% block title  %}
    {{ 'title.report_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.report_list'|trans }}</h1>
    {% if reports is defined and reports|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.created_at'|trans }}</th>
                <th>{{ 'label.updated_at'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for report in reports %}
                <tr>
                    <td>{{ report.id }}</td>
                    <td>{{ report.title }}</td>
                    <td>{{ report.createdAt }}</td>
                    <td>{{ report.updatedAt }}</td>
                    <td>
                        <a href="{{ url('report_show', {id: report.id}) }}" title="View">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
    <p>
        {{ 'message.empty_list"'|trans }}
    </p>
{% endif %}
{% endblock %}
