{% block nav %}
    <nav class="navbar bg-dark navbar-dark p-3">
        <a class="navbar-brand">Bug app</a>
        <ul class="navbar-nav d-flex flex-row col-gap10">
            <li class="nav-item"><a href="{{ url('report_index') }}" class="nav-link">{{ 'label.reports'|trans }}</a></li>
            <li class="nav-item"><a href="{{ url('category_index') }}" class="nav-link">{{ 'label.categories'|trans }}</a></li>
            <li class="nav-item"><a href="{{ url('tag_index') }}" class="nav-link">{{ 'label.tags'|trans }}</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item"><a href="{{ url('app_logout') }}" class="nav-link">{{ 'action.logout'|trans }}</a></li>
            {% else %}
                <li class="nav-item"><a href="{{ url('app_login') }}" class="nav-link">{{ 'action.login'|trans }}</a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}
